@model SportStore.WebUI.Models.CartIndexViewModel
@{
    ViewBag.Title = "Your Cart";
}

<style>
    #cartTable td {
        vertical-align: middle;
    }
</style>

<div class="panel-heading panel-heading-unpaded">
    <table class="table table-unbordered">
        <thead>
            <tr>
                <td class="text-left">@ViewBag.Title</td>
                <td class="text-right">Total: @Model.Cart.ComputeTotalValue().ToString("c")</td>
            </tr>
        </thead>
    </table>
</div>

<div class="panel-body fixed">
    <table id="cartTable" class="table table-responsive">
        <thead>
            <tr>
                <th>Quantity</th>
                <th>Item</th>
                <th class="text-right">Price</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Cart.Lines)
            {
                <tr>
                    <td class="text-center">@line.Quantity</td>
                    <td class="text-left">@line.Product.Name</td>
                    <td class="text-right">@line.Product.Price.ToString("c")</td>
                    <td class="text-right">
                        @((line.Quantity * line.Product.Price).ToString("c"))
                    </td>
                    <td>
                        @using (Html.BeginForm("RemoveFromCart", "Cart"))
                        {
                            @Html.Hidden("ProductId", line.Product.ProductID)
                            @Html.HiddenFor(x => Model.ReturnUrl)
                            <input class="btn btn-xs btn-warning"
                                   type="submit" value="Remove" />
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.Cart.ComputeTotalValue().ToString("c")
                </td>
                <td></td>
            </tr>
        </tfoot>
    </table>
</div>
