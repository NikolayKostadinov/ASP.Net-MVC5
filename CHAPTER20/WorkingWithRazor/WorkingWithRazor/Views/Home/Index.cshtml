@model string[]
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Header{
    <div class="view">
        @foreach (string str in new string[] { "Home", "List", "Edit" })
        {
            @Html.ActionLink(str, str, null, new { style = "margin 5px" });
        }
    </div>

}

<div class="view">
    This is list of fruit names: 
    @foreach (var name in Model)
    {
        <span><b>@name</b></span>
    }
</div>

@section Footer{
    <div class="view">
        This is thw footer
    </div>
    }

